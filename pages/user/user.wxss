/* pages/user/user.wxss */
.container {
  background-color: #F2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0 25rpx 0;
  align-items: center;
  background-color: #f00;
}
.userinfo-avatar {
  width: 136rpx;
  height: 136rpx;
  margin-bottom: 10rpx;
  padding: 8rpx; 
  border-radius: 50%;
  background-color: #fff;
}
.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
  font-family: 'youyuan';
  font-weight: 900
}
.editModify{
  border: 1px solid #fff;
  border-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  font-family: 'Kaiti';
  padding: 3rpx 5rpx;
  margin-top: 25rpx;
}
/**orderForm**/
.orderForm{
  width: 100%;
}
.orderTop{
  width: 100%;
  height: 36px;
  line-height: 36px;
  font-size: 24rpx;
  border-bottom: 1px solid #dfdfdf;
  background: #fff;
}
.orderLeft{
  margin-left: 20rpx;
}
.orderRight{
  float: right;
  
}
.orderTxt{
  margin-right: 6rpx;
  vertical-align: middle;
}
.orderImg{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
/**orderCenter**/
.orderCenter{
  width: 100%;
  border-bottom: 1px solid #dfdfdf;
  background: #fff;
}
.account{
  width: 96%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.accCont{
  width: 20%;
  text-align: center;
  display: inline-block;
}
.accContImg{
  width: 40%;
  margin: 20rpx 30% 0 30%;
  height: 60rpx;
}
.accContTxt{
  height: 45rpx;
  line-height: 45rpx;
}
/**orderFoot**/
.orderFoot{
  width: 100%;
  margin-top: 8rpx;
  border-bottom: 1px solid #dfdfdf;
  background: #fff;
}
.footBox{
  width: 96%;
  margin: 0 2%;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.footCont{
  width: 25%;
  text-align: center;
  display: inline-block;
}
.footContImg{
  width: 40%;
  margin: 20rpx 30% 0 30%;
  height: 75rpx;
}
.footContTxt{
  height: 45rpx;
  line-height: 45rpx;
}
/**post**/
.post{
  width: 100%;
}
.postImg{
  width: 100%;
  margin-top: 8rpx;
  height: 180rpx;
}
/**info_list**/
.weui_cell{
    position: relative;
    display: flex;
    padding: 20rpx 20rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dfdfdf;
    background: #fff;
}
.weui_cell_hd{
  display: inline-block;
  width: 40rpx;
  margin-right: 10rpx;
}
.weui_cell_hd image{
  width: 100%;
  height: 40rpx;
  vertical-align: -4rpx;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 26rpx;
  color: #333;
}
.badge{
  position: absolute;
  top: 18rpx;
  right: 80rpx;
  width: 28rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #EE5C42;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 16rpx;
}
.with_arrow{
  position: absolute;
  top: 18rpx;
  right: 28rpx;
  width: 28rpx;
  height: 30rpx;
}
.with_arrow image{
  width: 100%;
  height: 100%;
}