.title{
  width: 98%;
  height: 60rpx;
  margin: 15rpx 8rpx 8rpx 8rpx;
  line-height: 60rpx;
  background: #dfdfdf;
  font-size: 30rpx;
  font-family: 'Kaiti';
  color: #fff;
  text-shadow: 1px 1px 1px #000;
  display: block;
  border-radius: 5rpx;
  padding-left: 5rpx;
}
.modify{
  width: 100%;
  margin-top: 5rpx;
  border-top: 1px solid #cfcfcf;
}
.avatar{
  width: 98%;
  height: 90rpx;
  line-height: 90rpx;
  margin:5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #efefef;
  border-radius: 5rpx;
  padding-left: 5rpx;
  border-bottom: 1px solid #dfdfdf;
}
.left{
  font-size: 28rpx;
  font-family: 'PingFang SC';
  margin-left: 20rpx;
}
.right{
  margin-right: 20rpx;
}
.avatarMsg{
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 100%;
  padding: 5rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.avatarMsgTxt{
  font-size: 28rpx;
  font-family: 'PingFang SC';
  margin-right: 20rpx;
  line-height: 60rpx;
}
.with_arrow{
  width: 28rpx;
  height: 30rpx;
  vertical-align: middle;
}
/**avatarExit**/
.avatarExit{
  width: 90%;
  height: 80rpx;
  margin:40rpx auto;
  background: #f00;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
}
.exitLogon{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 5rpx;
}