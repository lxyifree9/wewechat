 .layload{
  width: 100%;
  height:65rpx;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #7f7f7f;
  text-align: center;
  background: #ddd;
  border-top: 1px solid #efefef;
}
.loading{

  
} 

.otherbar {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 13px;
  background: #f8f8f8;
  color: #848689;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #dfdfdf;
  margin-bottom:3rpx;
}

.otherbar-center {
  width: 100%;
  height: 100%;
}

.otherbar-center text {
  margin: 0 15rpx;
}

.copyright {
  width: 100%;
  height: 25px;
  line-height: 25px;
  text-align: center;
  font-size: 11px;
}
