.buypage {
  background: #f2f2f2;
}

/**topAddress**/

.topAddress {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
}

.nameMsg {
  width: 96%;
  height: 50rpx;
  margin: 0 auto;
  line-height: 50rpx;
}

.payerName {
  height: 100%;
  line-height: 50rpx;
  font-size: 26rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.payerPhone {
  height: 100%;
  line-height: 50rpx;
  font-size: 24rpx;
}

.addressMsg {
  width: 96%;
  margin: 0 auto;
  display: block;
  line-height: 50rpx;
  font-size: 24rpx;
}

.addressDesc {
  width: 90%;
  height: 100%;
  display: inline-block;
  letter-spacing: 1.5rpx;
  box-sizing: border-box;
}

.blue {
  height: 24rpx;
  display: inline-block;
  color: #0ff;
  border: 1rpx solid #0ff;
  border-radius: 5rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  padding: 0 3rpx;
  text-align: center;
}

.exchange {
  width: 10%;
  display: inline-block;
}

.exchangeImg {
  width: 32rpx;
  height: 32rpx;
  margin-left: 40rpx;
}

.line {
  width: 100%;
  border-top: 2px dashed #aaa;
  margin-top: 10rpx;
}

/**productMsg**/
.proCont{
  width: 100%;
  margin-top: 180rpx;
}
.productMsg {
  width: 100%;
  border-bottom: 1rpx solid #dfdfdf;
}

.productStore {
  width: 100%;
  background: #fff;
  margin-bottom: 3rpx;
  border-bottom: 1rpx solid #dfdfdf;
}

.storeLogo {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.storeName {
  font-size: 26rpx;
  vertical-align: middle;
}

/**productSaleChild**/

.productSaleChild {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}

.productChildImg {
  width: 150rpx;
  height: 150rpx;
  margin-left: 16rpx;
  margin-top: 20rpx;
}

.productChildDesc {
  display: flex;
  flex-direction: column;
  margin-left: 12rpx;
  margin-top: 20rpx;
}

.productDescTitle {
  width: 96%;
  height: 75rpx;
  overflow: hidden;
  font-size: 25rpx;
  font-weight: bold;
  color: #000;
}

.fresh {
  height: 20rpx;
  font-size: 20rpx;
  font-weight: none;
  border: 1px solid #06ff00;
  border-radius: 5rpx;
  line-height: 20rpx;
  color: #06ff00;
}

.productDescParameter {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  padding-left: 8rpx;
  font-size: 22rpx;
  color: #696969;
  border: 1px solid #dfdfdf;
  width: 95%;
}

.quantity {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.quantityPrice {
  color: #f00;
  font-size: 26rpx;
  line-height: 35rpx;
}

.stepper {
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
  width: 126rpx;
  height: 35rpx;
  border: 1px solid #aaa;
  border-radius: 6rpx;
  overflow: hidden;
}

.stepper text {
  width: 28rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}

.number {
  width: 70rpx;
  height: 35rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #483d8b;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: #fff;
  background: #b0c4de;
}

/*禁用样式*/

.stepper .disabled {
  color: #696969;
  background: #ccc;
}

/***expressWay****/

.expressWay {
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.tit {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 16rpx;
  font-size: 25rpx;
  color: #000;
  margin-top: 5rpx;
}

.dt {
  width: 100%;
  font-size: 25rpx;
  color: #000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.dt picker {
  width: 30%;
}

.dt-item {
  flex: 1;
  padding: 10rpx 50rpx;
  border: 1px solid #dfdfdf;
  color: #4b0082;
}

.pos {
  position: relative;
}

.pos:after {
  content: " ";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  border-top: 15rpx solid #576b95;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  left: 20rpx;
  top: 20rpx;
}

.modify {
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #dfdfdf;
  margin-bottom: 10rpx;
}

.avatar {
  width: 98%;
  height: 75rpx;
  line-height: 75rpx;
  margin: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 5rpx;
  padding-left: 5rpx;
}

.left {
  font-size: 25rpx;
  font-family: 'PingFang SC';
  margin-left: 20rpx;
}

.right {
  margin-right: 20rpx;
}

.avatarMsg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  padding: 5rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.avatarMsgTxt {
  font-size: 25rpx;
  font-family: 'PingFang SC';
  margin-right: 20rpx;
  line-height: 60rpx;
}

.with_arrow {
  width: 28rpx;
  height: 30rpx;
  vertical-align: middle;
}

/***allPrice***/

.allPrice {
  width: 100%;
  background: #fff;
}

.genre {
  width: 98%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
  line-height: 75rpx;
}

.category {
  margin-left: 20rpx;
}

.price {
  margin-right: 20rpx;
  color: #f00;
}

.result {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #fff;
  border-top: 1px solid #dfdfdf;
}

.resPrice {
  margin-right: 20rpx;
}

.resNum {
  color: #f00;
}

/****payWays****/

.payWays {
  width: 100%;
  background: #fff;
  margin-top: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.wxPay {
  width: 80%;
  height: 60rpx;
  margin: 15rpx auto;
  line-height: 60rpx;
  font-size: 26rpx;
  display: block;
}

.con {
  width: 80%;
  height: 60rpx;
  margin: 15rpx auto;
  line-height: 60rpx;
  font-size: 26rpx;
  display: block;
}

.another {
  width: 80%;
  height: 60rpx;
  margin: 15rpx auto;
  line-height: 60rpx;
  background-color: #9370db;
  font-size: 26rpx;
  display: block;
}

/*遮罩层*/
.buydes-dialog-container{  
    width: 100%;  
    height: 100%;  
    justify-content: space-between;  
    background-color:rgba(15, 15, 26, 0.7);  
    position: fixed; 
    top: 0;
    z-index: 9999;  
}  
  
.buydes-dialog-container-top{  
    flex-grow: 1; 
}  
  
.buydes-dialog-container-bottom{  
    display: flex;  
    flex-grow: 0; 
    width: 100%;
    height: 100%; 
}  

.cover{
  width: 80%;
  height: 80%;
  margin: 10% auto;
  padding-top: 20%;
}
.cover image{
  width: 100%;
  height: 600rpx;
  border-radius: 8rpx;
}
  
.buydes-dialog-container-bottom-item{  
    padding:24rpx;  
    display: flex;  
    justify-content: center;  
    background: #32CD32;
    border-bottom: 1rpx solid #000; 
    border-radius: 8rpx;
    font-family: "Kaiti";
    margin-top: 20rpx; 
    color: #fff;
} 
